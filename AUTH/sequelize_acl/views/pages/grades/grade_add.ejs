<%- include('..//partials/head', {title: 'Add grade' }) %>

    <body>
        <h3>Add grade list</h3>
        <%- include('../partials/navbar.ejs', {user}) %>
            <% const selectTeacherHtml=htmlHelper.getSelectIdCodeFromArr(teachers,'teacherId', 'name' , 'teacherControl'
                , 'form-control' ) %>
                <% let selectSchoolHtml=htmlHelper.getSelectIdCodeFromArr(schools, 'schoolId' , 'name' , 'schoolControl'
                    ,'form-control' ) %>
                    <% let selectSubjectHtml=htmlHelper.getSelectIdCodeFromArr(subjects, 'subjectId' , 'name'
                        , 'subjectControl' ,'form-control' ) %>
                        <% let selectStudentHtml=htmlHelper.getSelectIdCodeFromArr(students, 'studentId' , 'name'
                            , 'studentControl' ,'form-control' ) %>

                            <form action="/grades/add" method="post">

                                <div>
                                    <label for="gradeControl" class="form-label">Grade:</label>
                                    <input type="number" min="1" max="6" step="0.5" class="form-control"
                                        id="gradeControl" name="grade" required>
                                </div>
                                <div>
                                    <label for="descriptionControl" class="form-label">Description:</label>
                                    <input type="text" class="form-control" id="descriptionControl" name="description">
                                </div>
                                <div>
                                    <label for="subjectControl" class="form-label">Subject:</label>
                                    <%- selectSubjectHtml %>
                                </div>
                                <div>
                                    <label for="teacherControl" class="form-label">Teacher:</label>
                                    <%- selectTeacherHtml %>
                                </div>
                                <div>
                                    <label for="studentControl" class="form-label">Student:</label>
                                    <%- selectStudentHtml %>
                                </div>
                                <button class="btn" type="submit">Save grade</button>
                            </form>



                            <%- include('../partials/footer', {title: 'Add Grades' }) %>
    </body>

    </html>