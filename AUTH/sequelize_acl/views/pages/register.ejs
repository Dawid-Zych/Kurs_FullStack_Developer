<%- include('partials/head', { title: 'Register' }) %>

    <body>
        <h3>Register</h3>

        <%- include('partials/navbar', { user }) %>
            <% let selectSchoolHtml=htmlHelper.getSelectIdCodeFromArr(schools, 'schoolId' , 'name' , 'schoolId'
                , 'form-control' ) %>
                <form action="/register" method="post">
                    <div>
                        <label for="emailControl" class="form-label">Email: </label>
                        <input type="email" id="emailControl" name="email" class="form-control">
                    </div>

                    <div>
                        <label for="nameControl" class="form-label">Name: </label>
                        <input type="text" id="nameControl" name="name" class="form-control">
                    </div>

                    <div>
                        <label for="surnameControl" class="form-label">Surname: </label>
                        <input type="text" id="surnameControl" name="surname" class="form-control">
                    </div>

                    <div>
                        <label for="passwordControl" class="form-label">Password: </label>
                        <input type="password" id="passwordControl" name="password" class="form-control">
                    </div>

                    <div>
                        <label for="addressControl" class="form-label">Address: </label>
                        <input type="text" id="addressControl" name="address" class="form-control">
                    </div>

                    <div>
                        <label for="ageControl" class="form-label">Age: </label>
                        <input type="number" min="18" max="100" id="ageControl" name="age" class="form-control">
                    </div>

                    <div>
                        <label for="schoolId" class="form-label">School: </label>
                        <%- selectSchoolHtml  %>
                    </div>


                    <button type="submit" class="btn">Register</button>
                </form>
                <%- include('partials/footer', { title: 'Register' }) %>
    </body>

    </html>